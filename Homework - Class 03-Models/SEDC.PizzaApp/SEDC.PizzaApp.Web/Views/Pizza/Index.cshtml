@model List<SEDC.PizzaApp.Web.Models.ViewModels.PizzaViewModel>

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-5">

        @foreach (var pizza in Model)
        {
            if (pizza.HasExtras)
            {
                pizza.Price += 10;

            }
            <p>Name: @pizza.Name</p>
            <p>Price: @pizza.Price</p>
            <p>Size: @pizza.PizzaSize</p><p>___________________________________________________________________</p>             
           
        }


    </div>
</div>


